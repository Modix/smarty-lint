			"functions": ["mdx_getlocale", "mdx_loopcount"],
			"modifiers": ["explode"]
		}],

		"empty-block": "warn",
		"empty-comment": "warn",
		"eqeqeq": ["warn"],
		"lower-case-identifier": ["warn", {
			"ignore": ["namedAttribute", "property", "variable"]
		}],
		"unnecessary-encapsulation": "warn",
		"unquoted-string": ["warn", {
			"ignore": ["array"]
		}]
